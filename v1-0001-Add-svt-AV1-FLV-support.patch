diff --git a/libavformat/av1.c b/libavformat/av1.c
index a0aad43..8d9b242 100644
--- a/libavformat/av1.c
+++ b/libavformat/av1.c
@@ -372,6 +372,8 @@ int ff_isom_write_av1c(AVIOContext *pb, const uint8_t *buf, int size)
